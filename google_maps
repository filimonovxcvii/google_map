<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Кастомная карта Google</title>
    <style>
      html, body, #map {
        height: 100%;
        margin: 0;
        padding: 0;
      }
    </style>
    <script src="https://maps.googleapis.com/maps/api/js?key=ТВОЙ_API_KEY"></script>
    <script>
      function initMap() {
        const styledMapType = new google.maps.StyledMapType(
          [
            {
              "featureType": "all",
              "elementType": "geometry.stroke",
              "stylers": [{ "visibility": "off" }]
            },
            {
              "featureType": "all",
              "elementType": "labels",
              "stylers": [{ "visibility": "off" }]
            },
            {
              "featureType": "landscape",
              "elementType": "geometry.fill",
              "stylers": [{ "color": "#ffffff" }]
            },
            {
              "featureType": "poi",
              "elementType": "geometry.fill",
              "stylers": [
                { "visibility": "on" },
                { "color": "#ea3448" }
              ]
            },
            {
              "featureType": "poi.attraction",
              "elementType": "geometry.fill",
              "stylers": [{ "color": "#ea9418" }]
            }
          ],
          { name: "Custom Style" }
        );

        const map = new google.maps.Map(document.getElementById("map"), {
          center: { lat: 55.751244, lng: 37.618423 },
          zoom: 11,
          mapTypeControlOptions: {
            mapTypeIds: ["roadmap", "styled_map"]
          }
        });

        map.mapTypes.set("styled_map", styledMapType);
        map.setMapTypeId("styled_map");
      }
    </script>
  </head>
  <body onload="initMap()">
    <div id="map"></div>
  </body>
</html>
